    {
        <div style="height: 80vh;">
            <br><br><br>
            <p>Please Login</p>
            <br><br><br>
        </div>
    }
    else
    {
        @if (isLoading)
        {
            <br><br><br>
            <p>Loading Overtime Data...</p>
            <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
        }
        else
        {
            @if (User.grade != "VIA")
            {
                <div class="container" style="padding: 20px;">
                    <h3>Overtime Request Detail</h3>
                    <br>
                    <div class="row">
                        <div class="col-sm-6">
                            <p>Start Date<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="date" class="form-control" @bind="StartDate">
                            </div>

                            <p>Start Time (Plan)<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="time" class="form-control" @bind="StartTime">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <p>End Date<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="date" class="form-control" @bind="EndDate">
                            </div>

                            <p>End Time (Plan)<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="time" class="form-control" @bind="EndTime">
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="col-sm-6">
                        <p>Attachment</p>
                    </div>

                    <div class="col-sm-12">
                        @if (Attachment is null)
                        {
                            <p style="color: red;">No Data*</p>
                        }
                        else
                        {
                            <img src=@AttachmentFile alt="No Attachment" width="300" height="300">
                        }
                        <br><br>
                        <div class="col-sm-6">
                            <p>Remarks</p>


                            <div class="mb-3" style="width: 80%;">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" @bind="Remarks"></textarea>
                            </div>
                            <br>


                            @if (Status == 1)
                            {
                                <p>Request Date : @RequestDate.ToString("MMMM, dd yyyy")</p>
                            }

                            else if (Status == 2 || Status == 4 || Status == 5)
                            {
                                <p>Request Date: @RequestDate.ToString("MMMM, dd yyyy")</p>
                                <p>Approved Date: @ApprovedDate.ToString("MMMM, dd yyyy")</p>
                            }

                            else if (Status == 3)
                            {
                                <p>Request Date: @RequestDate.ToString("MMMM, dd yyyy")</p>
                                <p>Completed Date: @CompletedDate.ToString("MMMM, dd yyyy")</p>
                            }

                            else if (Status == 6)
                            {
                                <p>Request Date: @RequestDate.ToString("MMMM, dd yyyy")</p>
                                <p>Approved Date: @ApprovedDate.ToString("MMMM, dd yyyy")</p>
                                <p>Completed Date: @CompletedDate.ToString("MMMM, dd yyyy")</p>
                            }

                            else if (Status == 9)
                            {
                                <p>Request Date: @RequestDate.ToString("MMMM, dd yyyy")</p>
                                <p>Completed Date: @CompletedDate.ToString("MMMM, dd yyyy")</p>
                            }

                        </div>
                        <br>
                        @if (Status == 1)
                        {
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="btn btn-success" type="button" @onclick="() => PostOvertimeStatus(2)">Approve</div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="btn btn-danger" type="button" @onclick="() => PostOvertimeStatus(3)">Reject</div>
                                </div>
                            </div>
                        }

                        else if (Status == 4)
                        {
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="btn btn-success" type="button" @onclick="() => PostOvertimeStatus(2)">
                                        @if (isLoading)
                                        {
                                            <p>Approving...</p>
                                        }
                                        else
                                        {
                                            <p>Approved</p>
                                        }
                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    <div class="btn btn-warning" type="button" @onclick="() => PostOvertimeStatus(5)">Revise</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {   <div class="container" style="padding: 20px;">
                @if (Status == 1 || Status == 3 || Status == 4 || Status == 6 || Status == 9)
                {
                    <h3>Overtime Request Detail</h3>
                    <br>
                    <div class="row">
                        <div class="col-sm-6">
                            <p>Start Date<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="date" class="form-control" @bind="StartDate">
                            </div>

                            <p>Start Time (Plan)<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="time" class="form-control" @bind="StartTime">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <p>End Date<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="date" class="form-control" @bind="EndDate">
                            </div>

                            <p>End Time (Plan)<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="time" class="form-control" @bind="EndTime">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <p>Attachment</p>
                    </div>

                    <div class="col-sm-12">
                        @if (Attachment is null)
                        {
                            <p style="color: red;">No Data*</p>
                        }
                        else
                        {
                            <img src=@AttachmentFile alt="No Attachment" width="300" height="300">
                        }
                        <br><br>
                        
                        <div class="col-sm-6">
                            <p>Remarks</p>
                            <div class="mb-3" style="width: 80%;">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" @bind="Remarks"></textarea>
                            </div>
                            <br>

                                @if (Status == 1)
                                {
                                    <p>Request Date: @RequestDate.ToString("MMMM, dd yyyy")</p>
                                }

                                else if (Status == 2 || Status == 4 || Status == 5)
                                {
                                    <p>Request Date: @RequestDate.ToString("MMMM, dd yyyy")</p>
                                    <p>Approved Date: @ApprovedDate.ToString("MMMM, dd yyyy")</p>
                                }

                                else if (Status == 3)
                                {
                                    <p>Request Date: @RequestDate.ToString("MMMM, dd yyyy")</p>
                                    <p>Completed Date: @CompletedDate.ToString("MMMM, dd yyyy")</p>
                                }

                                else if (Status == 6)
                                {
                                    <p>Request Date: @RequestDate.ToString("MMMM, dd yyyy")</p>
                                    <p>Approved Date: @ApprovedDate.ToString("MMMM, dd yyyy")</p>
                                    <p>Completed Date: @CompletedDate.ToString("MMMM, dd yyyy")</p>
                                }

                                else if (Status == 9)
                                {
                                    <p>Request Date: @RequestDate.ToString("MMMM, dd yyyy")</p>
                                    <p>Completed Date: @CompletedDate.ToString("MMMM, dd yyyy")</p>
                                }

                            </div>
                            <br>
                            @if (Status == 1 || Status == 4)
                            {   
                                <div class="mb-3" style="display:flex;justify-content:center;align-items:center;">
                                    <button class="btn" style="background-color: #CA000E; color: white; width: 30%" @onclick="() => PostOvertimeStatus(9)">
                                        CANCEL
                                    </button>
                                </div>
                            }
                        </div>
                }
                else
                {
                    <h3>Overtime Settlement Form</h3>
                    <br>
                    <div class="row">
                        <div class="col-sm-6">
                            <p>Start Date<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="date" class="form-control" @bind="StartDate">
                            </div>

                            <p>Start Time (Plan)<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="time" class="form-control" @bind="StartTime">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <p>End Date<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="date" class="form-control" @bind="EndDate">
                            </div>

                            <p>End Time (Plan)<span class="required">*</span></p>
                            <div class="mb-3" style="width: 50%;">
                                <input type="time" class="form-control" @bind="EndTime">
                            </div>
                        </div>
                    </div>

                        <div class="col-sm-6">
                            <p>Attachment</p>
                                @if (Attachment is null)
                                {
                                    <p style="color: red;">No Data*</p>
                                }
