<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSubNav = !expandSubNav">
                <span class="oi oi-timer" aria-hidden="true"></span> Overtime
            </NavLink>
            @if (expandSubNav)
            {
                <div class="container" style="background-color: #3ea7c9f2; width: 95%;border-bottom-left-radius: 4px; border-bottom-right-radius: 4px;">
                    <div class="nav-subitem">
                        <NavLink class="nav-link" href="overtime/request">
                            <span class="oi oi-plus" aria-hidden="true"></span> Create Request
                        </NavLink>
                    </div>
                    <div class="nav-subitem">
                        <NavLink class="nav-link" href="overtime/submission">
                            <span class="oi oi-spreadsheet" aria-hidden="true"></span> My Submission
                        </NavLink>
                    </div>
                    <div class="nav-subitem">
                        <NavLink class="nav-link" href="overtime/history">
                            <span class="oi oi-sort-descending" aria-hidden="true"></span> History
                        </NavLink>
                    </div>
                </div>
            }
        </div>
    </nav>
</div>

@code {
    private bool expandSubNav;
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
